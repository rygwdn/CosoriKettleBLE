{
    // Editor settings
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    // Python settings
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    // YAML settings
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },

    // Files to exclude from explorer
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.DS_Store": true
    },

    // Search settings
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true
    }
}
